package eu.excitement.entailment.core.component.syntacticknowledge;

import java.util.List;

import eu.excitement.entailment.core.Components;
import eu.excitement.entailment.core.representation.parsetree.AbstractNode;

/**
 * @author Gil
 *
 * Type argument I and S follow that of SyntacticRule (thus, I=Info and S=BasicNode, for BasicNode based syntactic Rule)
 */
public interface SyntacticResource<I,S extends AbstractNode<I,S>> extends Components {

	
	List<RuleMatch<I,S>> findMatches(S currentTree);
	
	
	List<RuleMatch<I,S>> findMatches(S textTree, S hypothesisTree);
	
	
}
