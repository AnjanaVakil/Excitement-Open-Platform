package org.excitement.distsim.scoring.combine;

import java.util.List;

import org.excitement.distsim.scoring.Score;

/**
 * @author Meni Adler
 * @since 17/04/2012
 * 
 * The RuleOverallScorer interface gives the final score which is the product of a few RuleTypeScorers, 
 * i.e. for every type we have a score, and this unifies the scores for all of the types ("X" and "Y") usually 
 */

public interface RuleOverallScorer {

	
	/**
	 * @param scores a list of similarity scores
	 * @return a unified score of the given similarity scores
	 * @throws IlegalScoresException if the number of the given scores does not fit the method of the unification
	 */
	public double score(List<Score> scores) throws IlegalScoresException;
}
